# API Registry Service Configuration

# Server Configuration
PORT=3005
NODE_ENV=development
BASE_URL=http://localhost:3005

# Authentication Configuration
API_KEYS=dev-key-1,dev-key-2,dev-key-3
ENABLE_DID_AUTH=true

# DID Configuration
SERVICE_DID=did:web:api-registry
CHALLENGE_EXPIRES_IN=5m
TOKEN_EXPIRES_IN=24h

# Storage Configuration
STORAGE_PATH=./data/specs
GIT_ENABLED=true

# Feature Flags
ENABLE_SDK_GENERATION=true
ENABLE_SPEC_VALIDATION=true

# Logging Configuration
LOG_LEVEL=info

# Database Configuration (if using a database)
# DATABASE_URL=postgresql://user:password@localhost:5432/api_registry
# REDIS_URL=redis://localhost:6379

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=3006
HEALTH_CHECK_INTERVAL=30000

# Development Configuration
DEBUG=api-registry:*
